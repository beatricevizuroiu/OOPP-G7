<GridPane minHeight="500" minWidth="750" stylesheets="@UIstyle(DARKMODE).css" xmlns="http://javafx.com/javafx/11.0.1"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.tudelft.oopp.g7.client.controllers.TAViewController">
    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" minWidth="128.0"/>
        <ColumnConstraints hgrow="SOMETIMES"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="120.0"/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="75.0" vgrow="NEVER"/>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="95.0" vgrow="SOMETIMES"/>
    </rowConstraints>

    <HBox styleClass="course-panel" GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.rowIndex="0">
        <Text fx:id="courseName" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0"/>
    </HBox>

    <SplitPane styleClass="side-panel" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.rowSpan="2"/>

    <ScrollPane fx:id="questionList" fitToHeight="true" fitToWidth="true" GridPane.columnIndex="1"
                GridPane.columnSpan="3" GridPane.rowIndex="1">
        <padding>
            <Insets>
                <top>5</top>
                <right>20</right>
                <bottom>5</bottom>
                <left>20</left>
            </Insets>
        </padding>
        <VBox spacing="20" styleClass="background">
            <VBox fx:id="pollWindow">
                <padding>
                    <Insets>
                        <top>5</top>
                        <right>5</right>
                        <bottom>5</bottom>
                        <left>5</left>
                    </Insets>
                </padding>
            </VBox>
            <VBox fx:id="questionContainer" spacing="20">
                <padding>
                    <Insets>
                        <top>5</top>
                        <right>5</right>
                        <bottom>5</bottom>
                        <left>5</left>
                    </Insets>
                </padding>
            </VBox>
        </VBox>
    </ScrollPane>

    <HBox GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="2" styleClass="answer-panel">
        <TextArea fx:id="answerBox" minHeight="95.0" prefWidth="885.0" promptText="Type your answer here" HBox.hgrow="ALWAYS"/>
        <Region HBox.hgrow="NEVER" minWidth="10" styleClass="answer-panel"/>
        <VBox>
            <Region VBox.vgrow="SOMETIMES"/>
            <Button fx:id="postAnswerButton" mnemonicParsing="false" styleClass="post-button" alignment="CENTER" HBox.hgrow="NEVER"/>
            <Region VBox.vgrow="SOMETIMES"/>
        </VBox>
        <Region HBox.hgrow="NEVER" minWidth="10" styleClass="answer-panel"/>
    </HBox>

    <!--    Main Buttons    -->

    <Button fx:id="helpButton" mnemonicParsing="false" onAction="#handleHelpButtonDark" styleClass="help-button"
            textAlignment="CENTER" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="2"/>


    <HBox alignment="CENTER_RIGHT" GridPane.columnIndex="1" GridPane.columnSpan="2">
        <Button fx:id="modeButton" mnemonicParsing="false" onAction="#handleButtonMode2" styleClass="mode-button"/>

        <Region minWidth="15"/>

        <Button fx:id="answeredQuestions" mnemonicParsing="false" onAction="#answeredQuestionListDark" styleClass="answered-question-button"/>

        <Region minWidth="15"/>

        <Button fx:id="sortButton" text="Sort" mnemonicParsing="false" onAction="#switchSortingMode" styleClass="sort-button"/>

        <Region minWidth="10"/>

        <Button fx:id="userList" mnemonicParsing="false" onAction="#listofUsersDark" styleClass="upvoteBtn">
            <graphic>
                <SVGPath
                        content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"
                        styleClass="link-button"/>
            </graphic>
        </Button>

        <!--    <Button fx:id="mode" mnemonicParsing="false" onAction="#handleButtonMode" styleClass="mode-button" GridPane.columnIndex="1" GridPane.rowIndex="0" />-->

        <Button fx:id="poll" mnemonicParsing="false" onAction="#createPoll2" styleClass="upvoteBtn">
            <graphic>
                <SVGPath
                        content="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z"
                        styleClass="link-button"/>
            </graphic>
        </Button>

        <Button fx:id="export" mnemonicParsing="false" onAction="#exportQuestions" styleClass="upvoteBtn">
            <graphic>
                <SVGPath content="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z" styleClass="link-button"/>
            </graphic>
        </Button>

        <Button onAction="#switchView2" styleClass="upvoteBtn">
            <graphic>
                <SVGPath content="M6.99 11L3 15l3.99 4v-3H14v-2H6.99v-3zM21 9l-3.99-4v3H10v2h7.01v3L21 9z" styleClass="link-button" />
            </graphic>
        </Button>

        <Button id="link" mnemonicParsing="false" onAction="#displayLinkAndPassword" styleClass="upvoteBtn" GridPane.columnIndex="2">
            <graphic>
                <SVGPath
                        content="M3.9 12c0-1.71 1.39-3.1 3.1-3.1h4V7H7c-2.76 0-5 2.24-5 5s2.24 5 5 5h4v-1.9H7c-1.71 0-3.1-1.39-3.1-3.1zM8 13h8v-2H8v2zm9-6h-4v1.9h4c1.71 0 3.1 1.39 3.1 3.1s-1.39 3.1-3.1 3.1h-4V17h4c2.76 0 5-2.24 5-5s-2.24-5-5-5z"
                        styleClass="link-button"/>
            </graphic>
        </Button>

    </HBox>

