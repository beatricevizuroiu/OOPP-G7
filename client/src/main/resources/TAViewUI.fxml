<GridPane minHeight="500" minWidth="750" stylesheets="@UIstyle.css" xmlns="http://javafx.com/javafx/11.0.1"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.tudelft.oopp.g7.client.controllers.TAViewController">
    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" minWidth="128.0"/>
        <ColumnConstraints hgrow="SOMETIMES"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="120.0"/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="75.0" vgrow="NEVER"/>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="95.0" vgrow="SOMETIMES"/>
    </rowConstraints>

    <HBox styleClass="course-panel" GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.rowIndex="0">
        <Text  fx:id="courseName" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text=" Course Name"/>
    </HBox>

    <SplitPane styleClass="side-panel" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.rowSpan="2"/>

    <ScrollPane fx:id="questionList" fitToHeight="true" fitToWidth="true" GridPane.columnIndex="1"
                GridPane.columnSpan="3" GridPane.rowIndex="1">
        <padding>
            <Insets>
                <top>5</top>
                <right>20</right>
                <bottom>5</bottom>
                <left>20</left>
            </Insets>
        </padding>
        <VBox spacing="20" styleClass="background">
            <VBox fx:id="pollWindow">
                <padding>
                    <Insets>
                        <top>5</top>
                        <right>5</right>
                        <bottom>5</bottom>
                        <left>5</left>
                    </Insets>
                </padding>
            </VBox>
            <VBox fx:id="questionContainer" spacing="20">
                <padding>
                    <Insets>
                        <top>5</top>
                        <right>5</right>
                        <bottom>5</bottom>
                        <left>5</left>
                    </Insets>
                </padding>
            </VBox>
        </VBox>
    </ScrollPane>

    <TextArea fx:id="answerBox" prefHeight="95.0" prefWidth="885.0" promptText="Type your answer here" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Button fx:id="postAnswerButton" mnemonicParsing="false" styleClass="post-button" text="Post Answer" textFill="WHITE" GridPane.columnIndex="2" GridPane.rowIndex="2"/>

    <!--    Main Buttons    -->
    <Button mnemonicParsing="false" onAction="#handleButtonMode" text="Mode" GridPane.halignment="CENTER"
            GridPane.rowIndex="1" GridPane.valignment="CENTER">
        <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@sun (1).png"/>
                </image>
            </ImageView>
        </graphic>
    </Button>

    <Button fx:id="helpButton" mnemonicParsing="false" onAction="#handleHelpButtonLight" styleClass="help-button"
            textAlignment="CENTER" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="2"/>

    <FlowPane alignment="CENTER_RIGHT" GridPane.columnIndex="1" GridPane.columnSpan="2">

    <Button fx:id="answeredQuestions" mnemonicParsing="false" onAction="#answeredQuestionList" styleClass="answered-question-button" GridPane.columnIndex="1" GridPane.rowIndex="0">
        <GridPane.margin>
            <Insets left="740.0"/>
        </GridPane.margin>
    </Button>

    <Button fx:id="userList" mnemonicParsing="false" onAction="#listofUsers" styleClass="upvoteBtn"
            GridPane.columnIndex="1" GridPane.rowIndex="0">
        <graphic>
            <SVGPath
                    content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"
                    styleClass="link-button"/>
        </graphic>
        <GridPane.margin>
            <Insets left="690.0"/>
        </GridPane.margin>
    </Button>

    <!--    <Button fx:id="mode" mnemonicParsing="false" onAction="#handleButtonMode" styleClass="mode-button" GridPane.columnIndex="1" GridPane.rowIndex="0" />-->

    <Button fx:id="poll" mnemonicParsing="false" onAction="#createPoll" styleClass="upvoteBtn" GridPane.columnIndex="1"
            GridPane.rowIndex="0">
        <graphic>
            <SVGPath
                    content="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z"
                    styleClass="link-button"/>
        </graphic>
        <GridPane.margin>
            <Insets left="640.0"/>
        </GridPane.margin>
    </Button>

    <Button fx:id="export" mnemonicParsing="false" onAction="#exportQuestions" styleClass="upvoteBtn"
            GridPane.columnIndex="1" GridPane.rowIndex="0">
        <graphic>
            <SVGPath content="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z" styleClass="link-button"/>
        </graphic>
        <GridPane.margin>
            <Insets left="590.0"/>
        </GridPane.margin>
    </Button>

    </FlowPane>



