<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane minHeight="500" minWidth="750" stylesheets="@UIstyle(DARKMODE).css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.tudelft.oopp.g7.client.controllers.LecturerViewController">
    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" minWidth="128.0" />
        <ColumnConstraints hgrow="SOMETIMES" />
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="120.0" />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="75.0" vgrow="NEVER" />
        <RowConstraints vgrow="SOMETIMES" />
        <RowConstraints maxHeight="95.0" vgrow="SOMETIMES" />
    </rowConstraints>

    <HBox styleClass="course-panel" GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.rowIndex="0">
        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text=" Course Name">
            <font>
                <Font name="Book Antiqua Bold" size="36.0" />
            </font>
        </Text>
    </HBox>

    <SplitPane styleClass="side-panel" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.rowSpan="2" />

    <ScrollPane fx:id="questionList" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="1">
        <VBox fx:id="questionContainer" />
    </ScrollPane>

    <TextArea fx:id="answerBox" prefHeight="95.0" prefWidth="885.0" promptText="Type your answer here" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <font>
            <Font name="Book Antiqua" size="21.0" />
        </font>
    </TextArea>

    <Button fx:id="postAnswerButton" mnemonicParsing="false" styleClass="button" text="Post Answer" textFill="WHITE" GridPane.columnIndex="2" GridPane.rowIndex="2">
        <font>
            <Font name="Book Antiqua Bold" size="15.0" />
        </font>
    </Button>

    <Button fx:id="helpButton" mnemonicParsing="false" onAction="#help"  styleClass="help-button" GridPane.columnIndex="0" GridPane.rowIndex="2" />

    <Button fx:id="answeredQuestions" mnemonicParsing="false" onAction="#answeredQuestionList"  styleClass="answered-question-button" GridPane.columnIndex="2" GridPane.rowIndex="0" />

    <Button fx:id="userList" mnemonicParsing="false" onAction="#listofUsers"  styleClass="user-list-button" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Button fx:id="mode" mnemonicParsing="false" onAction="#modetoLight"  styleClass="mode-button" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Button fx:id="poll" mnemonicParsing="false" onAction="#createPoll"  styleClass="poll-button" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Button fx:id="export" mnemonicParsing="false" onAction="#exportQuestions"  styleClass="export-questions-button" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Button fx:id="link" mnemonicParsing="false" onAction="#createLink"  styleClass="link-button" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <!--TODO: speed indicator -->
</GridPane>
