<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<GridPane minHeight="500" minWidth="750" stylesheets="@UIstyle(DARKMODE).css" xmlns="http://javafx.com/javafx/11.0.1"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="nl.tudelft.oopp.g7.client.controllers.LecturerViewController">
    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" minWidth="128.0"/>
        <ColumnConstraints hgrow="SOMETIMES"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="120.0"/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="75.0" vgrow="NEVER"/>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="95.0" vgrow="SOMETIMES"/>
    </rowConstraints>

    <HBox styleClass="course-panel" GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.rowIndex="0">
        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="  RaisedHand">
            <font>
                <Font name="Book Antiqua Bold" size="36.0"/>
            </font>
        </Text>
    </HBox>

    <SplitPane styleClass="side-panel" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.rowSpan="2">
        <items>
            <AnchorPane prefHeight="40.0" prefWidth="40.0">
                <Button layoutX="27.0" mnemonicParsing="false" onAction="#handleButtonMode" text="Mode"
                        GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@sun (1).png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Circle fx:id="circle1" fill="WHITE" layoutX="63.0" layoutY="142.0" radius="22.0" stroke="BLACK"
                        strokeType="INSIDE" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Circle fx:id="circle2" fill="WHITE" layoutX="63.0" layoutY="189.0" radius="22.0" stroke="BLACK"
                        strokeType="INSIDE" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Circle fx:id="circle3" fill="WHITE" layoutX="63.0" layoutY="236.0" radius="22.0" stroke="BLACK"
                        strokeType="INSIDE" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Circle fx:id="circle4" fill="WHITE" layoutX="63.0" layoutY="282.0" radius="22.0" stroke="BLACK"
                        strokeType="INSIDE" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

            </AnchorPane>
        </items>
    </SplitPane>

    <ScrollPane fx:id="questionList"
                GridPane.columnIndex="1"
                GridPane.columnSpan="3"
                GridPane.rowIndex="1"
                fitToWidth="true"
                fitToHeight="true">
        <padding>
            <Insets>
                <right>10</right>
                <left>10</left>
            </Insets>
        </padding>
        <VBox fx:id="questionContainer" spacing="20">
            <padding>
                <Insets>
                    <top>5</top>
                    <right>5</right>
                    <bottom>5</bottom>
                    <left>5</left>
                </Insets>
            </padding>
        </VBox>
    </ScrollPane>

    <TextArea fx:id="answerBox" prefHeight="95.0" prefWidth="885.0" promptText="Type your answer here"
              GridPane.columnIndex="1" GridPane.rowIndex="2">
        <font>
            <Font name="Book Antiqua" size="21.0"/>
        </font>
    </TextArea>

    <Button fx:id="postAnswerButton" mnemonicParsing="false" styleClass="post-button" text="Post Answer"
            textFill="#360a41" GridPane.columnIndex="2" GridPane.rowIndex="2">
        <font>
            <Font name="Book Antiqua Bold" size="15.0"/>
        </font>
    </Button>

    <!--    Main Buttons    -->

    <Button fx:id="helpButton" mnemonicParsing="false" onAction="#handleHelpButtonDark" styleClass="help-button"
            textAlignment="CENTER" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="2"/>

    <FlowPane alignment="CENTER_RIGHT" GridPane.columnIndex="1" GridPane.columnSpan="2">

    <Button fx:id="answeredQuestions" mnemonicParsing="false" onAction="#answeredQuestionListDark" styleClass="answered-question-button" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="0" />

    <Button fx:id="userList" mnemonicParsing="false" onAction="#listofUsersDark" styleClass="upvoteBtn"
            GridPane.columnIndex="1" GridPane.rowIndex="0">
        <graphic>
            <SVGPath
                    content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"
                    fill="WHITE" styleClass="link-button"/>
        </graphic>
        <GridPane.margin>
            <Insets left="790.0"/>
        </GridPane.margin>
    </Button>

    <!--    <Button fx:id="mode" mnemonicParsing="false" onAction="#handleButtonMode" styleClass="mode-button" GridPane.columnIndex="1" GridPane.rowIndex="0" />-->

    <Button fx:id="poll" mnemonicParsing="false" onAction="#createPoll" styleClass="upvoteBtn" GridPane.columnIndex="1"
            GridPane.rowIndex="0">
        <graphic>
            <SVGPath
                    content="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z"
                    fill="WHITE" styleClass="link-button"/>
        </graphic>
        <GridPane.margin>
            <Insets left="840.0"/>
        </GridPane.margin>
    </Button>

    <Button fx:id="export" mnemonicParsing="false" onAction="#exportQuestions" styleClass="upvoteBtn"
            GridPane.columnIndex="2" GridPane.halignment="LEFT" GridPane.rowIndex="0">
        <graphic>
            <SVGPath content="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z" fill="WHITE" styleClass="link-button"/>
        </graphic>
    </Button>

    <Button id="link" mnemonicParsing="false" onAction="#createLink" styleClass="upvoteBtn" GridPane.columnIndex="2"
            GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.valignment="CENTER">
        <graphic>
            <SVGPath
                    content="M3.9 12c0-1.71 1.39-3.1 3.1-3.1h4V7H7c-2.76 0-5 2.24-5 5s2.24 5 5 5h4v-1.9H7c-1.71 0-3.1-1.39-3.1-3.1zM8 13h8v-2H8v2zm9-6h-4v1.9h4c1.71 0 3.1 1.39 3.1 3.1s-1.39 3.1-3.1 3.1h-4V17h4c2.76 0 5-2.24 5-5s-2.24-5-5-5z"
                    fill="WHITE" styleClass="link-button"/>
        </graphic>
    </Button>
    <!--TODO: speed indicator -->
    </FlowPane>
</GridPane>
