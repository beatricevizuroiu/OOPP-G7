<GridPane minHeight="500" minWidth="750" stylesheets="@UIstyle(DARKMODE).css" xmlns="http://javafx.com/javafx/11.0.1"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="nl.tudelft.oopp.g7.client.controllers.StudentViewUIController">
    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" minWidth="128.0"/>
        <ColumnConstraints hgrow="SOMETIMES"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="120.0"/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="75.0" vgrow="NEVER"/>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="95.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="95.0"/>
    </rowConstraints>

    <HBox styleClass="course-panel" GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.rowIndex="0">
        <Text fx:id="courseName" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0"/>
    </HBox>

    <SplitPane styleClass="side-panel" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.rowSpan="3"/>

    <ScrollPane fx:id="questionList" fitToHeight="true" fitToWidth="true" GridPane.columnIndex="1"
                GridPane.columnSpan="3" GridPane.rowIndex="1" GridPane.rowSpan="2">
        <padding>
            <Insets>
                <right>10</right>
                <left>10</left>
            </Insets>
        </padding>
        <VBox spacing="20" styleClass="background">
            <VBox fx:id="pollWindow">
                <padding>
                    <Insets>
                        <top>5</top>
                        <right>5</right>
                        <bottom>5</bottom>
                        <left>5</left>
                    </Insets>
                </padding>
            </VBox>
            <VBox fx:id="questionContainer" spacing="20">
                <padding>
                    <Insets>
                        <top>5</top>
                        <right>5</right>
                        <bottom>5</bottom>
                        <left>5</left>
                    </Insets>
                </padding>
            </VBox>
        </VBox>
    </ScrollPane>

    <HBox GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="3" GridPane.rowSpan="1" styleClass="answer-panel">
        <TextArea fx:id="answerBox" minHeight="95.0" prefWidth="885.0" promptText="Type your question here" HBox.hgrow="ALWAYS"/>
        <Region HBox.hgrow="NEVER" minWidth="10" styleClass="answer-panel"/>
        <VBox>
            <Region VBox.vgrow="SOMETIMES"/>
            <Button onAction="#sendQuestion" mnemonicParsing="false" styleClass="post-button" alignment="CENTER" HBox.hgrow="NEVER"/>
            <Region VBox.vgrow="SOMETIMES"/>
        </VBox>
        <Region HBox.hgrow="NEVER" minWidth="10" styleClass="answer-panel"/>
    </HBox>

