    <Button fx:id="whiteSlow" mnemonicParsing="false" onAction="#goSlower" style="-fx-background-color: #15041A"
            visible="true" GridPane.halignment="LEFT" GridPane.rowIndex="3" GridPane.valignment="CENTER">
        <graphic>
            <ImageView fitHeight="60.0" fitWidth="49.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="icons/slower.png"/>
                </image>
            </ImageView>
        </graphic>
    </Button>
    <Button fx:id="colorSlow" mnemonicParsing="false" style="-fx-background-color: #15041A" visible="false"
            GridPane.halignment="LEFT" GridPane.rowIndex="3" GridPane.valignment="CENTER">
        <graphic>
            <ImageView fitHeight="61.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="icons/slowerColored.png"/>
                </image>
            </ImageView>
        </graphic>
    </Button>

    <Button fx:id="whiteFast" mnemonicParsing="false" onAction="#goFaster" style="-fx-background-color: #15041A"
            visible="true" GridPane.halignment="RIGHT" GridPane.rowIndex="3" GridPane.valignment="CENTER">
        <graphic>
            <ImageView fitHeight="67.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="icons/faster.png"/>
                </image>
            </ImageView>
        </graphic>
    </Button>
    <Button fx:id="colorFast" mnemonicParsing="false" style="-fx-background-color: #15041A" visible="false"
            GridPane.halignment="RIGHT" GridPane.rowIndex="3" GridPane.valignment="CENTER">
        <graphic>
            <ImageView fitHeight="64.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="icons/fasterColored.png"/>
                </image>
            </ImageView>
        </graphic>
    </Button>

    <Button fx:id="helpButton" mnemonicParsing="false" onAction="#handleHelpButtonDark" styleClass="help-button"
            textAlignment="CENTER" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="2"/>

    <HBox alignment="CENTER_RIGHT" GridPane.columnIndex="1" GridPane.columnSpan="2">
        <Button fx:id="modeButton" mnemonicParsing="false" onAction="#handleButtonMode2" styleClass="mode-button"/>

        <Region minWidth="15"/>

        <Button fx:id="answeredQuestions" mnemonicParsing="false" onAction="#answeredQuestionListDark" styleClass="answered-question-button"/>

        <Region minWidth="15"/>

        <Button fx:id="sortButton" text="Sort" mnemonicParsing="false" onAction="#switchSortingMode" styleClass="sort-button"/>

        <Region minWidth="10"/>

        <Button fx:id="userList" mnemonicParsing="false" onAction="#listofUsersDark" styleClass="upvoteBtn">
            <graphic>
                <SVGPath
                        content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"
                        styleClass="link-button"/>
            </graphic>
        </Button>

