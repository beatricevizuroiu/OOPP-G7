            <Button layoutX="14.0" layoutY="72.0" mnemonicParsing="false" onAction="#handleButtonMode" text="Mode" textFill="WHITE">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@sun (1).png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </items></SplitPane>

    <ScrollPane
            GridPane.columnIndex="1" GridPane.rowIndex="1"
            GridPane.columnSpan="3"
